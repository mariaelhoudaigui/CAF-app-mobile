<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Ligne Ã‰quipe1 - VS - Ã‰quipe2 -->
    <TextView
        android:id="@+id/tvEquipe1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Maroc"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvVS"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvVS"/>

    <TextView
        android:id="@+id/tvVS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tvEquipe1"
        app:layout_constraintEnd_toStartOf="@id/tvEquipe2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvEquipe2"/>

    <TextView
        android:id="@+id/tvEquipe2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cameroun"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="end"
        app:layout_constraintStart_toEndOf="@id/tvVS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvVS"/>

    <!-- Date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“… 01/01/2026"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvVS"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Stade -->
    <TextView
        android:id="@+id/tvStade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŸ Stade XYZ"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvVS"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
