<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Ã‰quipe 1 (gauche) -->
    <TextView
        android:id="@+id/tvEquipe1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Maroc"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvVS"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- VS (centre) -->
    <TextView
        android:id="@+id/tvVS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Ã‰quipe 2 (droite) -->
    <TextView
        android:id="@+id/tvEquipe2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cameroun"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="end"
        app:layout_constraintStart_toEndOf="@id/tvVS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“… 12/06/2025"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEquipe1"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Stade -->
    <TextView
        android:id="@+id/tvStade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŸ Stade Mohammed V"
        android:textSize="13sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
